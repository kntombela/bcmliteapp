<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_three_line_dense">

    <TextView
        android:id="@+id/txt_step_number"
        style="@style/listIcon.dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_step_title"
        style="@style/listTitle.dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/step_title"
        app:layout_constraintEnd_toStartOf="@+id/txt_step_options"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_step_number"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_step_summary"
        style="@style/listSubTitle.dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/step_summary"
        app:layout_constraintBottom_toBottomOf="@+id/txt_step_number"
        app:layout_constraintEnd_toStartOf="@+id/txt_step_options"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_step_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_step_options"
        android:layout_width="@dimen/list_item_options_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/list_options"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/list_item_text_margin"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>